---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts', (p) => {
    // In development, show all posts (including drafts); in production, hide drafts
    const hideDraft = import.meta.env.PROD ? !p.data.draft : true;
    return hideDraft;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, date, tags = [], image } = post.data;
const { Content } = await post.render();

const formattedDate = new Date(date).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-4 py-10">
    <!-- Hero Image -->
    {image && (
      <div class="mb-8">
        <img 
          src={image.src} 
          alt={image.alt || title}
          class="w-full h-auto rounded-lg shadow-md"
        />
      </div>
    )}

    <!-- Title -->
    <h1 class="text-4xl font-bold mb-4">{title}</h1>

    <!-- Metadata -->
    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-6">
      <time datetime={new Date(date).toISOString()}>
        {formattedDate}
      </time>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="bg-gray-100 dark:bg-gray-800 px-3 py-1 rounded-full text-xs">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </div>

    <!-- Content with prose styling for proper Markdown rendering -->
    <div class="prose prose-lg prose-gray dark:prose-invert max-w-none
                prose-headings:font-bold
                prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl
                prose-a:text-blue-600 dark:prose-a:text-blue-400
                prose-code:text-sm prose-code:bg-gray-100 dark:prose-code:bg-gray-800
                prose-code:px-1 prose-code:py-0.5 prose-code:rounded
                prose-pre:bg-gray-900 dark:prose-pre:bg-gray-950
                prose-img:rounded-lg prose-img:shadow-md">
      <Content />
    </div>

    <!-- Back to blog link -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <a href="/blog/" class="text-blue-600 dark:text-blue-400 hover:underline">
        ← Powrót do listy wpisów
      </a>
    </div>
  </article>
</BaseLayout>
